<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pizza.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Pizza.Maui.Pages"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Shell.FlyoutBehavior="Disabled"
    Title="Pizza.Maui"
    Shell.BackgroundColor="DarkGoldenrod" Shell.TitleColor="#FFF" Shell.ForegroundColor="#1E1E1E">
    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="DarkGoldenrod"
                                   StatusBarStyle="LightContent"/>
    </Shell.Behaviors>

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />


    <!--<ShellContent
      Title="Home"
      ContentTemplate="{DataTemplate pages:HomePage}"
      Route="HomePage" />-->

</Shell>
